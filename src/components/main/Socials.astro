---
import BlueSkyLogo from "@assets/logos/socials/Bluesky_Logo.svg";
import GitHubLogo from "@assets/logos/socials/github-mark-white.svg";
import MailLogo from "@assets/logos/socials/mail_logo-black.svg";

import { email } from "@src/globals";
---

<div class="mt-4 flex gap-4">
  <a
    class="block brightness-90 hover:brightness-125"
    href="https://bsky.app/profile/meldanor.bsky.social"
    title="Bluesky Profile"
    aria-label="Bluesky Profile (opens in a new tab)"
    target="_blank"
    rel="noreferrer noopener"
  >
    <BlueSkyLogo class="m-0! h-8 w-8" />
  </a>
  <a
    class="block brightness-50 hover:brightness-0 dark:brightness-75 dark:hover:brightness-125"
    href="https://github.com/Meldanor/"
    title="GitHub Profile"
    aria-label="GitHub Profile (opens in a new tab)"
    target="_blank"
    rel="noreferrer noopener"
  >
    <GitHubLogo class="m-0! h-8 w-8" />
  </a>
  <a
    class="block hover:text-gray-600 dark:text-gray-200 dark:hover:text-white"
    href={`mailto:${email}`}
    title="E-Mail me"
    aria-label="E-Mail"
    target="_blank"
    rel="noreferrer noopener"
  >
    <MailLogo class="m-0! h-8 w-8" />
  </a>
</div>
